{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    },
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
