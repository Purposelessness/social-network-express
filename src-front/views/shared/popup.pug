mixin popup(id)
  div.modal.fade(tabindex='-1', aria-hidden='true', id=id)
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
        div.modal-body
          img.img-fluid(src='https://picsum.photos/300/300', alt='Image')
        div.modal-footer
          button.btn.btn-secondary(data-bs-dismiss='modal') Close